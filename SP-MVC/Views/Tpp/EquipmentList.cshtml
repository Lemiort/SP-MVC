@model IEnumerable<SP_MVC.Models.ModelToData.Equipment >

@{
    ViewBag.Title = "Оборудование";
}

<h2>Оборудование</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DetailNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DetailNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.ActionLink("Удалить", "DeleteEquipment", new { id=item.EquipmentId })
        </td>
    </tr>
}
</table>

@{Html.RenderPartial("AddEquipment", new SP_MVC.Models.ModelToData.Equipment());}